@page
@model BlogApp.Areas.Admin.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Modifier";
}

<h1 class="mb-3 mt-3">Modifier</h1>

<h4>Categorie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Categorie.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Categorie.Nom" class="control-label"></label>
                <input asp-for="Categorie.Nom" class="form-control" />
                <span asp-validation-for="Categorie.Nom" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Revenir à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
