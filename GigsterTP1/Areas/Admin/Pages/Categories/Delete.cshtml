@page
@model BlogApp.Areas.Admin.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 mt-2">Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette catégorie ?</h3>
<div>
    <h4>Categorie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categorie.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categorie.Nom)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Categorie.Id" />
        <input type="submit" value="Delete" class="btn btn-danger me-3" /> 
        <a asp-page="./Index">Revenir à la liste</a>
    </form>
</div>
