@page
@model GigsterTP1.Pages.Account.RegisterModel
@{
}
@{
    ViewData["Title"] = "Créer un compte";
}

<h1 class="text-center">Créer un compte</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <!-- Affichage des erreurs globales -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Nom d'utilisateur -->
            <div class="mb-3">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control" placeholder="Entrez votre nom d'utilisateur">
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <!-- Nom  -->
            <div class="mb-3">
                <label asp-for="Input.Nom" class="form-label"></label>
                <input asp-for="Input.Nom" class="form-control" placeholder="Entrez votre nom d'utilisateur">
                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>

            <!-- Prénom -->
            <div class="mb-3">
                <label asp-for="Input.Prenom" class="form-label"></label>
                <input asp-for="Input.Prenom" class="form-control" placeholder="Entrez votre nom d'utilisateur">
                <span asp-validation-for="Input.Prenom" class="text-danger"></span>
            </div>

            <!-- Courriel -->
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Entrez votre nom d'utilisateur">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Mot de passe -->
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="Entrez votre mot de passe">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirmation du mot de passe -->
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirmez votre mot de passe">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Bouton de validation -->
            <button type="submit" class="btn btn-primary w-100">Créer mon compte</button>

            <!-- Lien vers la connexion -->
            <p class="mt-3 text-center">
                Déjà un compte ? <a asp-page="/Account/Login">Se connecter</a>
            </p>
        </form>
    </div>
</div>