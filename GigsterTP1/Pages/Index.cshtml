@page
@using GigsterTP1.Pages
@model IndexModel
@{
    ViewData["Title"] = "Accueil";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="">
                <h1 class="display-4">Gigster</h1>
                <h2 class="mt-3">@Model.Message</h2>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 style="color: #b814b8;" class="card-title">Trouver un service</h5>
                    <form>
                        <div class="form-group">
                            <label for="categorie">Catégorie</label>
                            <select class="form-control mt-2" id="categorie">
                                <option>Sélectionner une catégorie</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="codePostal">Code postal</label>
                            <input type="text" class="form-control mt-2" id="codePostal" placeholder="Entrez votre code postal">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Rechercher</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>