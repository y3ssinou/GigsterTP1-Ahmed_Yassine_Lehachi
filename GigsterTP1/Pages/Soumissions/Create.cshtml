@page "{serviceId}"
@model GigsterTP1.Pages.Soumissions.CreateModel
@{
    ViewData["Title"] = "Créer une soumission";
}

<h1 class="mb-3">Créer une soumission</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@Model.Service.Nom</h5>
                    <p class="card-text">@Model.Service.Description</p>
                    <p class="card-text"><strong>Professionnel :</strong> @Model.Service.Utilisateur.UserName</p>
                    <p class="card-text"><strong>Tarif :</strong> @Model.Service.Tarif $</p>
                </div>
            </div>

            <div class="mb-3 form-group">
                <label asp-for="Input.DatePlanification" class="control-label">Date de planification</label>
                <input asp-for="Input.DatePlanification" class="form-control" />
                <span asp-validation-for="Input.DatePlanification" class="text-danger"></span>
            </div>

            <div class="mb-3 form-group">
                <label asp-for="Input.Description" class="control-label">Description</label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>

            <div class="mb-3 form-group">
                <button type="submit" class="btn btn-primary">Soumettre</button>
            </div>

            <div class="form-group">
                <a asp-page="/Categories/Details" asp-route-id="@Model.Service.CategorieId" class="btn btn-secondary">Retour à la liste des services</a>
            </div>
        </form>
    </div>
</div>