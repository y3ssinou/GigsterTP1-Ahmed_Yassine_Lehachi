@page "{id}"
@model GigsterTP1.Pages.Service.EditModel
@{
    ViewData["Title"] = "Modifier un service";
}

<h1>Modifier un service</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Nom" class="control-label"></label>
                <input asp-for="Input.Nom" class="form-control" />
                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.CategorieId" class="control-label"></label>
                <select asp-for="Input.CategorieId" class="form-control" asp-items="Model.Categories">
                    <option value="">Sélectionner la catégorie</option>
                </select>
                <span asp-validation-for="Input.CategorieId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Tarif" class="control-label"></label>
                <input asp-for="Input.Tarif" class="form-control" />
                <span asp-validation-for="Input.Tarif" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Description" class="control-label"></label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                
            </div>
            <div class="form-group">
                <a asp-page="Index" class="btn btn-secondary">Retour à la liste des services</a>
            </div>
        </form>
    </div>
</div>